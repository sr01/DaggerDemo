<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.rosiapps.daggerdemo.presentation.details.details.UserDetailsFragment">

    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:hint="phone"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:hint="address"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_phone"
        app:layout_constraintTop_toBottomOf="@+id/txt_phone"/>

    <TextView
        android:id="@+id/txt_hobbies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:hint="hobbies"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_address"
        app:layout_constraintTop_toBottomOf="@+id/txt_address"/>


</android.support.constraint.ConstraintLayout>
